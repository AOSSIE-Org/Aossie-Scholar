{
    "name": "scholar",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "./views/popup.html"
    },
    "content_scripts": [
        {
        "matches": [
            "https://scholar.google.com/citations?hl=*&user=*",
            "https://scholar.google.com/citations?user=*&hl=*"
        ],
        "js": [
            "./js/content.js"
        ]
    }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/chart.js@2.8.0; object-src 'self'",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ]
}